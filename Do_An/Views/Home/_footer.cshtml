@model IEnumerable<Do_An.Models.Info>
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-xs-12">
                </div>
                <div class="col-lg-4 col-md-4 col-xs-12">
                    <div class="widget clearfix">
                        <div class="widget-title">
                            <h3>Thông Tin Đường Dẫn</h3>
                        </div>
                        <ul class="footer-links">
                            <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                            <li><a href="#">Liên Hệ</a></li>
                        </ul><!-- end links -->
                    </div><!-- end clearfix -->
                </div><!-- end col -->
                <div class="col-lg-4 col-md-4 col-xs-12">
                    <div class="widget clearfix">
                        <div class="widget-title">
                            <h3>Liên Hệ Chi Tiết</h3>
                        </div>
                        <ul class="footer-links">
                            <li><a href="mailto:#">@Html.DisplayFor(Model => item.Email)</a></li>
                            <li><a href="#">@Html.DisplayFor(Model => item.Name)</a></li>
                            <li>@Html.DisplayFor(Model => item.Address)</li>
                            <li>@Html.DisplayFor(Model => item.Phone)</li>
                        </ul>
                        
                    </div><!-- end clearfix -->
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
    </footer><!-- end footer -->
