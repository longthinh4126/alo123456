@model IEnumerable<Do_An.Models.Promotion>
@{
    ViewBag.Title = "Promotion";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Trạng thái</th>
                            <th>Giảm giá</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Trạng thái</th>
                            <th>Giảm giá</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(Model => item.ID)</td>
                            <td>@Html.DisplayFor(Model => item.Name)</td>
                            <td>@Html.DisplayFor(Model => item.starDate)</td>
                            <td>@Html.DisplayFor(Model => item.endDate)</td>
                            <td>@Html.DisplayFor(Model => item.TrangThai)</td>
                            <td>@Html.DisplayFor(Model => item.GiamGia)<a>%</a></td>
                            <td><a class="btn btn-primary btn-circle" style="color:black"><i class="fa fa-trash"></i>+</a></td>
                            <td><a class="btn btn-success btn-circle"><i class="fa fa-trash"></i>s</a></td>
                            <td><a href="#" class="btn btn-danger btn-circle"><i class="fa fa-trash"></i>-</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

